{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "apps/dashboard/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/dashboard(/.*)?",
      "dest": "/apps/dashboard$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/public/$1"
    }
  ],
  "outputDirectory": "frontend/public",
  "framework": null,
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/invite",
      "destination": "https://discord.com/oauth2/authorize?client_id=1445916179163250860",
      "permanent": false
    },
    {
      "source": "/discord",
      "destination": "https://discord.gg/s6NNfPHxMS",
      "permanent": false
    },
    {
      "source": "/bot",
      "destination": "https://discord.com/oauth2/authorize?client_id=1445916179163250860",
      "permanent": false
    }
  ],
  "env": {
    "VERCEL_AI_GATEWAY_ENABLED": "true",
    "AI_GATEWAY_URL": "https://gateway.ai.cloudflare.com/v1"
  }
}
