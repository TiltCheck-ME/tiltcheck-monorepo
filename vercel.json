{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/newsletter/:path*",
      "destination": "https://api.tiltcheck.me/newsletter/:path*"
    },
    {
      "source": "/api/stripe/:path*",
      "destination": "https://api.tiltcheck.me/stripe/:path*"
    },
    {
      "source": "/api/suslink/:path*",
      "destination": "https://api.tiltcheck.me/safety/suslink/:path*"
    },
    {
      "source": "/play/api/:path*",
      "destination": "https://api.tiltcheck.me/:path*"
    },
    {
      "source": "/dashboard/:path*",
      "destination": "https://tiltcheck-dashboard.up.railway.app/dashboard/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
