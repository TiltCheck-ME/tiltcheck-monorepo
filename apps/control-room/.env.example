# TiltCheck Control Room - Environment Variables
# Copy to .env and fill in values before running

# Server port (default: 3001)
CONTROL_ROOM_PORT=3001

# Discord OAuth2 app credentials
# Create app at https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Must match the redirect URI set in your Discord app's OAuth2 settings
# e.g. https://tiltcheck.me/control-room/auth/discord/callback
DISCORD_CALLBACK_URL=https://tiltcheck.me/control-room/auth/discord/callback

# Random secret string for session encryption (generate with: openssl rand -hex 32)
SESSION_SECRET=change_this_to_a_random_secret

# Admin password for direct login fallback
ADMIN_PASSWORD=change_this_to_a_strong_password

# Minimum trust level required to access the control room (e.g. 50)
REQUIRED_TRUST_LEVEL=50

# NFT collection address for trust verification (Solana)
TRUST_NFT_COLLECTION=your_nft_collection_address

# Solana RPC endpoint
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
