# TiltCheck Monorepo - Root Environment Variables
# Copy to .env and fill in values before running
#
# App-specific env vars live in each app's own .env.example:
#   apps/dashboard/.env.example
#   apps/control-room/.env.example
#   apps/casino-api/.env.example
#   apps/qualifyfirst-service/.env.example
#
# Generate secrets with: openssl rand -hex 32

# ===========================================
# Node
# ===========================================
NODE_ENV=production

# ===========================================
# Discord Bots
# ===========================================
# Main discord-bot
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Dad bot (separate token)
DAD_DISCORD_TOKEN=your_dad_bot_token_here
DAD_DISCORD_CLIENT_ID=your_dad_bot_client_id_here
DAD_DISCORD_GUILD_ID=your_dad_bot_guild_id_here

# JustTheTip bot
JUSTTHETIP_DISCORD_BOT_TOKEN=your_justthetip_bot_token_here
JUSTTHETIP_DISCORD_CLIENT_ID=your_justthetip_client_id_here

# ===========================================
# Solana
# ===========================================
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta
JUSTTHETIP_FEE_WALLET=your_fee_wallet_address_here

# ===========================================
# Supabase (database)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# Auth / Sessions
# ===========================================
JWT_SECRET=change_this_to_32_plus_random_chars
JWT_EXPIRES_IN=7d
SESSION_SECRET=change_this_to_32_plus_random_chars
API_KEY_ENCRYPTION_KEY=change_this_to_32_plus_random_chars

# ===========================================
# OpenAI (AI Gateway)
# ===========================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# Stripe (Chrome Extension subscriptions)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID=price_your_subscription_price_id_here

# ===========================================
# Telegram (code ingest service)
# ===========================================
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_SESSION_STRING=your_session_string
TELEGRAM_CHANNELS=@StakeUSDailyDrops,@StakecomDailyDrops
TELEGRAM_POLL_INTERVAL=60

# ===========================================
# Trust / Casino data APIs (optional)
# ===========================================
USE_MOCK_TRUST_DATA=false
CASINO_GURU_API_KEY=your_casino_guru_api_key_here
ASKGAMBLERS_API_KEY=your_askgamblers_api_key_here
CHANGENOW_API_KEY=your_changenow_api_key_here

# ===========================================
# Mod notifications (discord-bot)
# ===========================================
MOD_CHANNEL_ID=your_mod_channel_id_here
MOD_ROLE_ID=your_mod_role_id_here
MOD_NOTIFICATIONS_ENABLED=true
MOD_RATE_LIMIT_WINDOW_MS=60000
MOD_MAX_NOTIFICATIONS_PER_WINDOW=10
MOD_DEDUPE_WINDOW_MS=300000
TRUST_ALERTS_CHANNEL_ID=your_trust_alerts_channel_id_here
TIP_DISCORD_WELCOME_CHANNEL_ID=your_welcome_channel_id_here
TIP_DISCORD_ANNOUNCEMENT_CHANNEL_ID=your_announcement_channel_id_here
TIP_DISCORD_RULES_CHANNEL_ID=your_rules_channel_id_here
TIP_DISCORD_HOW_TO_USE_BOT_CHANNEL_ID=your_howto_channel_id_here
DISCORD_OWNER_ID=your_discord_user_id_here
SUPPORT_CHANNEL_ID=your_support_channel_id_here

# ===========================================
# Misc
# ===========================================
REDIS_URL=redis://localhost:6379
FOUNDER_USERNAMES=jmenichole
TRUST_THRESHOLD=60
