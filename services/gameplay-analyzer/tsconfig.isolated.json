{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist-isolated",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strict": false,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "tests", "dist", "dist-isolated"]
}