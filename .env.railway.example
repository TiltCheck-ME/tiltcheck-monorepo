# Railway Environment Variables Reference
# Configure these in Railway Dashboard → Settings → Shared Variables

# ============================================================================
# SYSTEM
# ============================================================================
NODE_ENV=production
PORT=8080

# ============================================================================
# DISCORD - Main Bot (TiltCheck)
# ============================================================================
DISCORD_TOKEN=                    # Main bot token
DISCORD_CLIENT_ID=                # Main bot OAuth2 client ID
DISCORD_GUILD_ID=                 # Main Discord server ID
DISCORD_CLIENT_SECRET=            # OAuth2 client secret for dashboard auth
DISCORD_REDIRECT_URI=             # OAuth callback URL (e.g., https://your-app.railway.app/auth/discord/callback)
DISCORD_WEBHOOK_URL=              # Optional webhook for dashboard alerts

# ============================================================================
# DISCORD - JustTheTip Bot (Separate Service)
# ============================================================================
JUSTTHETIP_DISCORD_BOT_TOKEN=     # JustTheTip bot token
JUSTTHETIP_DISCORD_CLIENT_ID=     # JustTheTip bot OAuth2 client ID
JUSTTHETIP_FEE_WALLET=            # Solana wallet for tip fees

# ============================================================================
# DISCORD - Channels
# ============================================================================
TRUST_ALERTS_CHANNEL_ID=          # Channel for trust score alerts
SUPPORT_CHANNEL_ID=               # Channel for support/help messages

# ============================================================================
# SUPABASE (Authentication & Database)
# ============================================================================
SUPABASE_URL=                     # Supabase project URL
SUPABASE_ANON_KEY=                # Public anon key for client-side auth
SUPABASE_SERVICE_ROLE_KEY=        # Service role key for server-side operations
SUPABASE_PUBLISHABLE_KEY=         # Alternative to anon key (if using)

# ============================================================================
# SOLANA (Blockchain Integration)
# ============================================================================
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta       # mainnet-beta, testnet, or devnet

# ============================================================================
# DASHBOARD (Trust Score Monitoring)
# ============================================================================
DASHBOARD_PORT=5055               # Internal port (not needed if using unified PORT)
DASHBOARD_POLL_MS=30000           # Poll interval for trust rollup files
DASHBOARD_EVENTS_KEEP_DAYS=7      # Days to retain event history

# ============================================================================
# TRUST SYSTEM
# ============================================================================
TRUST_THRESHOLD=60                # Trust score threshold for alerts
PENDING_TIPS_STORE_PATH=/app/data/pending-tips.json
TRIVIA_STORE_PATH=/app/data/trivia-store.json
LANDING_LOG_PATH=/app/data/landing-requests.log

# ============================================================================
# OPTIONAL - Other Services
# ============================================================================
SUSLINK_AUTO_SCAN=true            # Auto-scan suspicious links
